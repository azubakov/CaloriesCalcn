<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    tools:context="azubakov.edu.caloriescalc.dialogs.AddBreadProductsDialogFragment"
    >

    tools:context=".dialogs.AddBreadProductDialogFragment"

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etProduct"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Popular Product" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCaloriesHundredGr"
        android:layout_below="@+id/etProduct"
        android:layout_centerHorizontal="true"
        android:hint="Calorie per 100 gr."
        android:inputType="numberDecimal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_below="@+id/etCaloriesHundredGr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
