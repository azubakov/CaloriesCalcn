<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="azubakov.edu.caloriescalc.activity.InformBodyCaloriesSpinActivity"
    tools:showIn="@layout/activity_inform_body_calories_spin">


   <ImageView
       android:layout_width="400dp"
       android:layout_height="100dp"
       android:id="@+id/ivBody"
       android:src="@drawable/salad1"
       android:scaleType="centerCrop"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"

       />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:id="@+id/tvDate"
        android:fontFamily="casual"
        android:textSize="@dimen/textSize"
        android:padding="5dp"
        android:layout_below="@+id/ivBody"
         />


  <!--  <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDate"
        android:hint="@string/date"
        android:fontFamily="casual"
        android:textSize="@dimen/textSize"
        android:padding="5dp"
        android:inputType="text"
        android:layout_toRightOf="@+id/tvDate"
        android:layout_below="@+id/ivBody"
        />-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDate"
        android:fontFamily="casual"
        android:textSize="@dimen/textSize"
        android:hint="Real Date and Time"
        android:padding="5dp"
        android:layout_toRightOf="@+id/tvDate"
        android:layout_below="@+id/ivBody"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:id="@+id/tvGender"
        android:fontFamily="casual"
        android:textSize="@dimen/textSize"
        android:padding="5dp"
        android:layout_below="@+id/tvDate"
         />


       <Spinner
        android:id="@+id/GenderSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tvDate"
        android:layout_toRightOf="@+id/tvGender"
        android:layout_toEndOf="@+id/tvGender"

           />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight: "
        android:id="@+id/tvWeight"
        android:fontFamily="casual"
        android:textSize="@dimen/textSize"
        android:padding="5dp"
        android:layout_below="@+id/tvGender"
        />

    <Spinner
        android:id="@+id/WeightSpinner"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tvGender"
        android:layout_toRightOf="@+id/tvGender"
        android:layout_toEndOf="@+id/tvGender" />

    <Spinner
        android:id="@+id/WeightGrammSpinner"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tvGender"
        android:layout_toRightOf="@+id/WeightSpinner"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:id="@+id/tvAge"
        android:fontFamily="casual"
        android:textSize="@dimen/textSize"
        android:padding="5dp"
        android:layout_below="@+id/tvWeight"
        />

    <Spinner
        android:id="@+id/AgeSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tvWeight"
        android:layout_toRightOf="@+id/tvWeight"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height: "
        android:id="@+id/tvHeight"
        android:fontFamily="casual"
        android:textSize="@dimen/textSize"
        android:padding="5dp"
        android:layout_below="@+id/tvAge"
        />

    <Spinner
        android:id="@+id/HeightSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tvAge"
        android:layout_toRightOf="@+id/tvWeight"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity: "
        android:id="@+id/tvActivity"
        android:fontFamily="casual"
        android:textSize="@dimen/textSize"
        android:padding="5dp"
        android:layout_below="@+id/tvHeight"
        />

    <Spinner
        android:id="@+id/ActivitySpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tvHeight"
        android:layout_toRightOf="@+id/tvWeight"
        />



</RelativeLayout>
