<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:clickable="true"
        android:id="@+id/layout"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivReddit"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/thrive_nutrition" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivReddit"
            android:text="Product name"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tvCal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivReddit"
            android:layout_toRightOf="@+id/ivReddit"
            android:text="Calories"
            android:layout_below="@+id/tvTitle"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        android:layout_alignBottom="@+id/ivReddit"
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tvFats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivReddit"
            android:layout_toEndOf="@+id/ivReddit"
            android:layout_toRightOf="@+id/ivReddit"
            android:text="Fats"
            android:layout_below="@+id/tvCal"
            android:textAppearance="?android:attr/textAppearanceLarge" />




    </RelativeLayout>



</android.support.v7.widget.CardView>